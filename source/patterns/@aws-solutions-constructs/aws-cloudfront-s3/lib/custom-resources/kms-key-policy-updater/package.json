    "description": "Custom resource for updating CMK key policies",
    "main": "lib/index.js",
    "types": "lib/index.d.ts",
    "author": {
        "name": "Amazon Web Services",
        "url": "https://aws.amazon.com",
        "organization": true
    },
    "license": "Apache-2.0",
    "scripts": {
